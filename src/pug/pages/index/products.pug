//-
section.products.parallax.lazy(data-bg="img/projects-bg4.svg" data-bg-fallback="img/projects-bg2.svg")
	.site-container.products__container
		.products__title-wrapper
			h2.products__title.site-second-title
				span
					| Комтек
				|	— это автоматизация медицинских учреждений с 2005 года
			.products__title-mobile-wrapper
				h2.products__title-mobile.site-second-title
					|	Наши продукты
				p
					|	Внедряем медицинские информационные системы от Севастополя до Чукотки
			a.button.button-reset.products__btn(href="/")
				|	 Наши продукты
		.products__list
			for item, index in prj_arr
				.products__item
					span.products__item-heading=item.heading
					span.products__item-feautures=item.text
					img(src=`img/projects-img${index}.svg`, alt=item.heading class="products__item-img")
